{{> header}}


<div>

<form action="/addOrganism" method="POST" id="organism_info">
    <div class="form-inline">
        <label for="Organism">Organism: </label>
        <input type="text" class="form-control" id="Organism" name="Organism">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<table id="organism_info" style="border:  1px solid black">
    <thead>
      <th>Organism</th>
    </thead>
    <tbody id="organism_body" style="border:  1px solid black">
      {{#oData.List}}
      <tr>
          <td id="id" style="display:none;">{{id}}</td>
          <td id="Organism" name="Organism">{{Organism}}</td>
          <td id="delete"> <input type="button" value="delete" onclick="deleteOrganism({{id}})" /></td>
          <td id="edit"> <a href="/{{id}}">Update</a>{{!-- <input type="button" value="edit" onClick="updateOeganism({{id}})"/> --}}</td>
      </tr>
      {{/oData.List}}
    </tbody>
</table>

</div>